                                  <type>zip</type>
                                  <overWrite>false</overWrite>
                                  <outputDirectory>${wildfly.managed.dir}</outputDirectory>
                              </artifactItem>
                          </artifactItems>
                      </configuration>
                  </execution>
              </executions>
          </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
